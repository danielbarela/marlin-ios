source 'https://github.com/CocoaPods/Specs.git'
platform :ios, '15.5'

workspace 'Marlin'
project 'Marlin.xcodeproj'

use_modular_headers!

def common_pods
  pod "Alamofire"
  pod 'geopackage-ios'
#  pod 'sf-ios', :git => 'https://github.com/ngageoint/simple-features-ios.git', :branch => 'develop'
#  pod 'grid-ios', :git => 'https://github.com/ngageoint/grid-ios.git', :branch => 'master'
#  pod 'gars-ios', :git => 'https://github.com/ngageoint/gars-ios.git', :branch => 'master'
end

target 'Marlin' do
    common_pods
    target 'MarlinTests' do
      inherit! :search_paths
      common_pods
      pod 'OHHTTPStubs'
      pod 'OHHTTPStubs/Swift'
      pod 'Quick'
      pod 'Nimble'
      pod 'KIF'
    end
end

